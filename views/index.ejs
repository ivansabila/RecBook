<%- include('./partials/header.ejs') %>
    <div id="main" class="flex flex-col justify-center items-center pt-12">
        <div class="w-96 flex flex-col gap-2">
            <h1 class="text-whiteBase text-3xl font-semibold">Hello, i'm Rec </h1>
            <div class="flex flex-row gap-2">
                <div class="calendar rounded-lg bg-primary flex flex-col p-4 gap-4">
                    <div class="flex flex-row gap-2">
                        <div class="day w-7 h-7 rounded-lg text-xs font-medium bg-basic flex justify-center items-center text-whiteBase">1</div>
                        <div class="day w-7 h-7 rounded-lg text-xs font-medium bg-basic flex justify-center items-center text-whiteBase">2</div>
                        <div class="day w-7 h-7 rounded-lg text-xs font-medium bg-basic flex justify-center items-center text-whiteBase">3</div>
                        <div class="day w-7 h-7 rounded-lg text-xs font-medium bg-basic flex justify-center items-center text-whiteBase">4</div>
                        <div class="day w-7 h-7 rounded-lg text-xs font-medium bg-basic flex justify-center items-center text-whiteBase">5</div>
                        <div class="day w-7 h-7 rounded-lg text-xs font-medium bg-basic flex justify-center items-center text-whiteBase">6</div>
                        <div class="day w-7 h-7 rounded-lg text-xs font-medium bg-basic flex justify-center items-center text-whiteBase">7</div>
                    </div>
                    <div class="flex gap-3 items-center pl-1">
                        <i class="fa-regular fa-calendar text-slate-400"></i>
                        <h4 id="month" class="text-slate-300 text-sm tracking-wide font-medium">January 2024</h4>
                    </div>
                </div>
                <div class="weather rounded-lg bg-primary flex flex-col p-4 w-full items-center relative ">
                    <img class="w-10 h-10 group-hover:opacity-15" src="/image/icons/<%= contents[0].data.weather[0].icon %>.png" alt="">
                    <h3 class="text-slate-300 tracking-wide font-medium "><%= Math.round(contents[0].data.main.temp-273.15) %>Â°C</h3>
                </div>
            </div>
            <div class="quotes rounded-lg bg-primary/50 flex flex-col p-4 gap-3">
                <p class="text-slate-300 text-sm font-medium tracking-wide italic">"<%= contents[1].data.quote %>"</p>
                <div class="flex justify-between">
                    <p class="text-slate-300 text-sm font-thin tracking-wider italic">- <%= contents[1].data.author %></p>
                    <p class="text-slate-300 text-sm font-thin tracking-wider italic">Quote of the day</p>
                </div>
            </div>
            <div class="flex flex-col gap-2">
                <p class="text-whiteBase tracking-wide font-medium">Recipe of breakfast</p>
                <div class="flex gap-2">
                    <div class="recipe flex-1 line-clamp-1 text-sm leading-7 py-1 px-4 rounded-lg text-basic font-medium bg-secondary transition-all duration-500 hover:opacity-70 hover:leading-7 hover:text-sm hover:cursor-pointer" data-recipe="<%= JSON.stringify(contents[2].data) %>" title="<%= contents[2].data.name %>"><%= contents[2].data.name %></div>
                    <div class="recipe flex-1 line-clamp-1 text-sm leading-7 py-1 px-4 rounded-lg text-slate-300 font-medium bg-primary transition-all duration-500 hover:opacity-70 hover:leading-7 hover:text-sm hover:cursor-pointer" data-recipe="<%= JSON.stringify(contents[3].data) %>" title="<%= contents[3].data.name %>"><%= contents[3].data.name %></div>
                    <div class="recipe flex-1 line-clamp-1 text-sm leading-7 py-1 px-4 rounded-lg text-slate-300 font-medium bg-primary transition-all duration-500 hover:opacity-70 hover:leading-7 hover:text-sm hover:cursor-pointer" data-recipe="<%= JSON.stringify(contents[4].data) %>" title="<%= contents[4].data.name %>"><%= contents[4].data.name %></div>
                </div>
            </div>
            <div class="flex flex-col rounded-lg bg-secondary p-6 gap-3 relative">
                <div class="todo flex justify-between items-center gap-2 group">
                    <div class="flex gap-3 items-center">
                        <div class="fCheckbox checkbox border-basic w-6 h-6 border-2 rounded hover:cursor-pointer relative flex-none">
                            <i class="checklist fa-solid fa-check absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-secondary opacity-0"></i>
                        </div>
                        <input type="iCheckbox checkbox" hidden name="" id="">
                        <p class="todo-content text-sm font-medium tracking-wide text-primary"><%= contents[5].data[0].todo %></p>
                    </div>
                    <i class="fa-solid fa-lg fa-xmark opacity-0 text-basic transition-all duration-500 hover:cursor-pointer group-hover:opacity-100" data-index="0" data-id="<%= contents[5].data[0].id %>"></i>
                </div>
                <div class="todo flex justify-between items-center gap-2 group">
                    <div class="flex gap-3 items-center">
                        <div class="fCheckbox checkbox border-basic w-6 h-6 border-2 rounded hover:cursor-pointer relative flex-none">
                            <i class="checklist fa-solid fa-check absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-secondary opacity-0"></i>
                        </div>
                        <input type="iCheckbox checkbox" hidden name="" id="">
                        <p class="todo-content text-sm font-medium tracking-wide text-primary"><%= contents[5].data[1].todo %></p>
                    </div>
                    <i class="fa-solid fa-lg fa-xmark opacity-0 text-basic transition-all duration-400 hover:cursor-pointer group-hover:opacity-100" data-index="1" data-id="<%= contents[5].data[1].id %>"></i>
                </div>
                <div class="todo flex justify-between items-center gap-2 group">
                    <div class="flex gap-3 items-center">
                        <div class="fCheckbox checkbox border-basic w-6 h-6 border-2 rounded hover:cursor-pointer relative flex-none">
                            <i class="checklist fa-solid fa-check absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-secondary opacity-0"></i>
                        </div>
                        <input type="iCheckbox checkbox" hidden name="" id="">
                        <p class="todo-content text-sm font-medium tracking-wide text-primary"><%= contents[5].data[2].todo %></p>
                    </div>
                    <i class="fa-solid fa-lg fa-xmark opacity-0 text-basic transition-all duration-400 hover:cursor-pointer group-hover:opacity-100" data-index="2" data-id="<%= contents[5].data[2].id %>"></i>
                </div>
            </div>
        </div>
    </div>
    <div id="recipe-details" class="recipe-details absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-80 flex-col gap-2 p-4 pb-6 bg-tertiary rounded-lg drop-shadow transition-all duration-500 hidden">
        <div id="recipeImg" class="bg-cover bg-center w-full h-48 rounded-md relative">
            <a id="closeBtn" class="flex items-center justify-center absolute w-8 h-8 bg-primary rounded-full drop-shadow-sm hover:cursor-pointer" style="top: -2rem; right: -2rem ;">
                <i class="fa-solid fa-xmark text-whiteBase"></i>
            </a>
            <div class="absolute w-full h-full rounded-md bg-gradient-to-t from-primary/50 to-primary/0"></div>
            <div class="absolute flex items-center gap-2 rounded-full px-4 py-2 backdrop-blur-sm border border-transparent border-t-whiteBase/10 border-l-whiteBase/10 bottom-2 right-2">
                <i class="fa-solid fa-sm fa-stopwatch text-whiteBase"></i>
                <p class="text-xs font-semibold tracking-wide text-slate-300">4 min</p>
            </div>
        </div>
        <div class="information flex flex-col gap-2">
            <h1 class="text-primary text-[26px] font-semibold"></h1>
            <div class="flex flex-col gap-2">
                <div class="ingredients flex flex-col gap-1">
                    <h3 class="text-primary tracking-wide font-medium">Ingredients:</h3>
                    <p class="text-basic tracking-wide leading-4 text-xs"></p>
                </div>
                <div class="instructions flex flex-col gap-1">
                    <h3 class="text-primary tracking-wide font-medium">Instructions:</h3>
                    <ul class="text-basic tracking-wide leading-4 text-xs list-disc list-outside pl-4"></ul>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/dates.js"></script>
    <script src="/js/fetchQuotes.js"></script>
    <script src="/js/recipeDetails.js"></script>
    <script src="/js/checkbox.js"></script>
    <%- include('./partials/footer.ejs') %>